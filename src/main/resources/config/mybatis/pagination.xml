   	<sql id="MYSQL_PAGINATION">
		limit #{startRecordIndex,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
	</sql>
	<!-- Oracle分页 -->
	<sql id="paginationStart">
